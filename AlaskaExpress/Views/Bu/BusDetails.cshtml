@model IEnumerable<AlaskaExpress.Models.Bus>

@{
    ViewBag.Title = "BusDetails";
}

<div class="row mx-5">

    <h2>All Bus List</h2>

    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Start Location</th>
                <th>End Location</th>
                <th>Total Seat</th>
                <th>Coach</th>
                <th>Cost Per Seat</th>
                <th>Journey Time</th>
                <th>Journey Day</th>
                <th>Numberplate</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Bus_start_location
                    </td>
                    <td>
                        @item.Bus_end_location
                    </td>
                    <td>
                        @item.Bus_total_seat
                    </td>
                    <td>
                        @item.Bus_coach
                    </td>
                    <td>
                        @item.Bus_cost_per_seat
                    </td>
                    <td>
                        @item.Bus_journey_time
                    </td>
                    <td>
                        @item.Bus_journey_day
                    </td>
                    <td>
                        @item.Bus_numberplate
                    </td>
                    <td>
                        @Html.ActionLink("Check Ticket Availability", "Edit", new { id = item.Bus_id })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
