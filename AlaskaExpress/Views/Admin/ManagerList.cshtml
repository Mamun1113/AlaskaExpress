@model List<AlaskaExpress.Models.Manager>

@{
    ViewBag.Title = "ManagerList";
    //Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="row mx-5">

    <h2>Manager List</h2>

    <p>
        @Html.ActionLink("Add new manager", "CreateManager")
    </p>

    <p>
        @Html.ActionLink("Delete manager", "DeleteManager")
    </p>

    <br />
    <br />
    <br />

    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Manager's Email</th>
                <th>Manager's Password</th>
                <th>Manager's Fullname</th>
                <th>Manager's Address</th>
                <th>Manager's NID</th>
                <th>Manager's Phone</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Manager_email</td>
                    <td>@item.Manager_password</td>
                    <td>@item.Manager_fullname</td>
                    <td>@item.Manager_address</td>
                    <td>@item.Manager_nid</td>
                    <td>@item.Manager_phone</td>
                </tr>
            }
        </tbody>
    </table>

</div>
