<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AlaskaExpress</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />

</head>
<body>

    <nav class="navbar navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home/">
                <h1><i class="fa-solid fa-mountain ms-5"></i> AlaskaExpress</h1>
            </a>
            <div class="justify-content-end me-5">
                <a class="text-primary" href="/Home/Login">Signup or Login <i class="fa-solid fa-user"></i></a>
            </div>
        </div>
    </nav>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary py-4">
        <div class="container-fluid">

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto mb-2 position-absolute top-50 start-50 translate-middle">

                    <li class="nav-item">
                        @if (ViewBag.Title == "Home")
                        {
                            <a class="nav-link active" href="/Home/">
                                Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        }
                        else
                        {
                            <a class="nav-link" href="/Home/">Home</a>
                        }
                    </li>
                    &nbsp;
                    <li class="nav-item">
                        @if (ViewBag.Title == "Contact")
                        {
                            <a class="nav-link active" href="/Home/Contact">
                                Contact
                                <span class="visually-hidden">(current)</span>
                            </a>
                        }
                        else
                        {
                            <a class="nav-link" href="/Home/Contact">Contact</a>
                        }
                    </li>
                    &nbsp;
                    <li class="nav-item">
                        @if (ViewBag.Title == "About")
                        {
                            <a class="nav-link active" href="/Home/About">
                                About
                                <span class="visually-hidden">(current)</span>
                            </a>
                        }
                        else
                        {
                            <a class="nav-link" href="/Home/About">About</a>
                        }
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <div id="footer">

        <footer>
            <div class="d-flex justify-content-between px-5 my-3 border-top">
                <p>Developed by <b>RAHIM, SAJID & MAMUN</b> | &copy; All rights reserved @DateTime.Now.Year</p>

                <ul class="list-unstyled d-flex">
                    <li class="ms-3"><a class="link-dark" href="#"><i class="fa-solid fa-envelope"></i></a></li>
                    <li class="ms-3"><a class="link-dark" href="#"><i class="fa-brands fa-twitter-square"></i></a></li>
                    <li class="ms-3"><a class="link-dark" href="#"><i class="fa-brands fa-instagram-square"></i></a></li>
                    <li class="ms-3"><a class="link-dark" href="#"><i class="fa-brands fa-facebook-square"></i></a></li>
                </ul>
            </div>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
