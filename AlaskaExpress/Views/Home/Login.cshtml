
@{
    ViewBag.Title = "Login";
}

<div class="row">
    <div class="col-xs-1 col-sm-1 col-md-3"></div>
    <div class="col-xs-10 col-sm-10 col-md-6 my-5">
        <form action="" method="post">
            <h3>Sign In</h3>

            <div class="py-3">
                <label for="inputEmailForSignin" class="form-label">Email</label>
                <input type="email" class="form-control" name="inputEmailForSignin" required minlength="0">
            </div>

            <div class="py-3">
                <label for="inputPasswordForSignin" class="form-label">Password</label>
                <input type="password" class="form-control" name="inputPasswordForSignin" required minlength="0">
            </div>

            <div class="py-3">
                <button type="submit" class="btn btn-primary" name="buttonForSignin">Sign In</button>
            </div>

            <div class="py-3">
                <i>Don't have an account? </i>
                <a href="/Home/Signup"><b class="text-primary"> Create a new account</b></a>
            </div>

        </form>
    </div>
    <div class="col-xs-1 col-sm-1 col-md-3"></div>
</div>

