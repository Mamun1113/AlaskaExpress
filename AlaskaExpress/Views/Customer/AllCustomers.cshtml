@model IEnumerable<AlaskaExpress.Models.Customer>

@{
    ViewBag.Title = "AllCustomers";
}


<div class="row mx-5">

    <h2>All Customer List</h2>

    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Customer_password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer_fullname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer_dob)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer_gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer_address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer_phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer_nid)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer_password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer_fullname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer_dob)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer_gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer_address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer_phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer_nid)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Customer_email })
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>